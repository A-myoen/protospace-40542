<div class="card">
  <%= link_to image_tag(url_for(prototype.image), class: :card__img ), prototype_path(prototype.id)%>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype.id), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
   </p>
    <a href="/prototype/<%= prototype.id %>/users/<%= prototype.user.id %>" class="card__user">
    <%= "by #{prototype.user.name}" %>
    </a>
  </div>
</div>
